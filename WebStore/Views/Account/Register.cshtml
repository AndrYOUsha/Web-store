@model WebStore.Models.Identity.IdentityViewModels.RegisterModel

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="FirstName" class="col control-label"></label>
                <input asp-for="FirstName" class="col form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="MiddleName" class="col control-label"></label>
                <input asp-for="MiddleName" class="col form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="LastName" class="col control-label"></label>
                <input asp-for="LastName" class="col form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Login" class="col control-label"></label>
                <input asp-for="Login" class="col form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Email" class="col control-label"></label>
                <p class="text-danger">*</p>
                <input asp-for="Email" class="col form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Phone" class="col control-label"></label>
                <input asp-for="Phone" class="col form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="Age" class="col control-label"></label>
                <input asp-for="Age" class="col form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Password" class="col control-label"></label>
                <p class="text-danger">*</p>
                <input asp-for="Password" class="col form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="ComparePassword" class="col control-label"></label>
                <p class="text-danger">*</p>
                <input asp-for="ComparePassword" class="col form-control" />
                <span asp-validation-for="ComparePassword" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-primary mt-2" value="Зарегистрироваться" />
    </div>
</form>