@model WebStore.Models.Characteristic
@{
    ViewData["Title"] = "CreateCharacteristic";
}

<h1>CreateCharacteristic</h1>

<div class="container">
    <form asp-controller="Admin" asp-action="CreateCharacteristic" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Article" class="col-2 control-label"></label>
            <input asp-for="Article" class="col-4 form-control" />
            <span asp-validation-for="Article" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Brand" class="col-2 control-label"></label>
            <input asp-for="Brand" class="col-4 form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Brunch" class="col-2 control-label"></label>
            <input asp-for="Brunch" class="col-4 form-control" />
            <span asp-validation-for="Brunch" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Color" class="col-2 control-label"></label>
            <input asp-for="Color" class="col-4 form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Count" class="col-2 control-label"></label>
            <input asp-for="Count" class="col-4 form-control" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="FullName" class="col-2 control-label"></label>
            <input asp-for="FullName" class="col-4 form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-2 control-label"></label>
            <input asp-for="Gender" class="col-4 form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Size" class="col-2 control-label"></label>
            <input asp-for="Size" class="col-4 form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="SizeISS" class="col-2 control-label"></label>
            <input asp-for="SizeISS" class="col-4 form-control" />
            <span asp-validation-for="SizeISS" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="SizeString" class="col-2 control-label"></label>
            <input asp-for="SizeString" class="col-4 form-control" />
            <span asp-validation-for="SizeString" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-2 control-label"></label>
            <input asp-for="Type" class="col-4 form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <input type="button" class="btn btn-outline-secondary" onclick="history.go(-1)" value="Назад" />
        <input type="submit" class="btn btn-primary" value="Добавить характеристику" />
    </form>
</div>