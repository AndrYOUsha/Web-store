@model WebStore.Models.Characteristic

@{
    ViewData["Title"] = "Удалить характеристику";
}

@ViewData["ErrorMessage"]

<h1>Удалить характеристику</h1>

<div class="container">
    <form asp-controller="Admin" asp-action="DeleteCharacteristic" method="post">
        <div class="form-group row">
            <label asp-for="Article" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Article</label>
        </div>
        <div class="form-group row">
            <label asp-for="Brand" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Brand</label>
        </div>
        <div class="form-group row">
            <label asp-for="Brunch" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Brunch</label>
        </div>
        <div class="form-group row">
            <label asp-for="Color" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Color</label>
        </div>
        <div class="form-group row">
            <label asp-for="Count" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Count</label>
        </div>
        <div class="form-group row">
            <label asp-for="FullName" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.FullName</label>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Gender</label>
        </div>
        <div class="form-group row">
            <label asp-for="Size" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Size</label>
        </div>
        <div class="form-group row">
            <label asp-for="SizeISS" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.SizeISS</label>
        </div>
        <div class="form-group row">
            <label asp-for="SizeString" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.SizeString</label>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-2 control-label"></label>
            <label class="col-4 control-label">@Model.Type</label>
        </div>
        <input type="submit" class="btn btn-danger" value="Подтвердить удаление" />
        <a onclick="history.go(-1)" class="btn btn-primary">Отмена</a>
    </form>
</div>