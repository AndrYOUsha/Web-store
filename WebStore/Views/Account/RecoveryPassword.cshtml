@model WebStore.Models.Identity.IdentityViewModels.RecoveryModel

<form asp-controller="Account" asp-action="RecoveryPassword" asp-antiforgery="true" method="post">
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <p>Мы отправим пароль к Вам на почту</p>
        </div>
        <input type="submit" class="btn btn-primary" value="Отправить пароль" />
    </div>
</form>